{
  "name": "undux-todomvc",
  "version": "1.0.0",
  "description": "TodoMVC for Undux",
  "main": "src/index.tsx",
  "repository": "git@github.com:bcherny/undux-todomvc.git",
  "author": "Boris Cherny <boris@performancejs.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && webpack && npm run copy",
    "build:watch": "webpack -w",
    "clean": "rm -rf dist",
    "copy": "cp src/index.html dist/index.html && cp node_modules/todomvc-common/base.css dist/base.css && cp node_modules/todomvc-app-css/index.css dist/index.css && cp node_modules/todomvc-common/base.js dist/base.js",
    "start": "webpack-dev-server",
    "watch": "npm run build && concurrently -k 'npm run build:watch' 'npm run start'"
  },
  "dependencies": {
    "@types/classnames": "^2.2.3",
    "@types/lodash": "^4.14.107",
    "@types/react": "^16.3.10",
    "@types/react-dom": "^16.0.5",
    "classnames": "^2.2.5",
    "lodash": "^4.17.5",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "rxjs": "^5.5.10",
    "todomvc-app-css": "^2.1.1",
    "todomvc-common": "^1.0.5",
    "undux": "^4.0.7"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.0.0",
    "concurrently": "^3.5.1",
    "source-map-loader": "^0.2.3",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  }
}
